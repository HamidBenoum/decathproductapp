{% extends "layout.njk" %}


{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-5">
          <div class="imgAbt box-shadow">
              <img width="350" height="350" src="https://www.decathlon.fr/media/{{product.image_path}}" class="rounded mx-auto d-block" />
              <p>
                {{product.title}}
              </p>
          </div>
        </div>
        <div class="col-md-5">
          <div class="productDescription">
            <p>
                {{product.description}}
            </p>
          </div>
          <div class="rating">
            <p>
              {% for i in range(1, 6) -%}
                {% if product.rating >= (i) %}
                <span class="fa fa-star checked"></span>
                {% elif product.rating > (i - 0.5) %}
                <span class="fa fa-star-half-o checked "></span>
                {% else %}
                <span class="fa fa-star"></span>
                {% endif %}
              {% endfor %}
                <br>
                  Note du public : {{product.rating}} / 5
            </p>
          </div>
        </div>
    </div>
</div>


{% endblock %}
