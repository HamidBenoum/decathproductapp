{% extends "layout.njk" %}

{% block content %}
  <div>
    <table class="table table-striped">
  <thead class="text-light bg-dark">
  </thead>
  <tbody>
      <div class="container">
          <div class="row">
            {% for product in products%}
              <div class="col-md-4">
                  <div class="imgAbt box-shadow">
                    <a href="http://localhost:3000/products/{{product.id}}">
                      <img width="220" height="220" src="https://www.decathlon.fr/media/{{product.image_path}}" class="rounded mx-auto d-block" />
                      </a>
                      <p>
                        {{product.title}}
                      </p>
                  </div>
              </div>
            {%endfor%}
          </div>
      </div>
  </tbody>
</table>
  </div>
{% endblock %}

